generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  content content[]
  tags tag[]
}

enum ContentType {
  youtube
  twitter
  video
  article
  podcast
  book
  course
  other
}

model content{
  id Int @id @default(autoincrement())
  link String
  type ContentType
  title String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  
  userId Int
  user User @relation(fields: [userId], references: [id])
  tagId Int
  tag tag @relation(fields: [tagId], references: [id])
}

model tag{
  id Int @id @default(autoincrement())
  title String
  content content[]
  userId Int
  user User @relation(fields: [userId], references: [id]) 
}